{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "build",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "target": "ES2015",
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
